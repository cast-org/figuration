{
  "name": "figuration",
  "description": "A feature rich, responsive, mobile first, accessible, front-end framework inspired by Bootstrap.",
  "version": "4.0.0-alpha.3",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "accessible",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "http://figuration.org",
  "author": "CAST, Inc.",
  "scripts": {
    "test": "grunt test",
    "blc": "blc --exclude-external --filter-level 3 --get --ordered --recursive --host-requests 4 --input http://localhost:3000/",
    "http-server": "http-server --silent -p 3000",
    "check-broken-links": "npm-run-all --parallel --race \"http-server -- _gh_pages/\" blc"
  },
  "style": "dist/css/figuration.css",
  "sass": "scss/figuration.scss",
  "main": "dist/js/figuration.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cast-org/figuration.git"
  },
  "bugs": {
    "url": "https://github.com/cast-org/figuration/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "jquery": "1.9.1 - 3"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "broken-link-checker": "^0.7.8",
    "eslint": "^5.14.1",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-figuration": "file:./grunt/eslint-plugin-figuration",
    "glob": "^7.1.3",
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.0",
    "grunt-contrib-connect": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-qunit": "^3.1.0",
    "grunt-contrib-uglify": "^4.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-eslint": "^21.0.0",
    "grunt-html": "^10.1.0",
    "grunt-jekyll": "^1.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-rtlcss": "^2.0.1",
    "grunt-sass": "^3.0.2",
    "grunt-saucelabs": "^9.0.1",
    "grunt-stylelint": "^0.10.1",
    "http-server": "^0.11.1",
    "load-grunt-tasks": "^4.0.0",
    "node-sass": "^4.11.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "qunit": "^2.9.1",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.3",
    "time-grunt": "^2.0.0"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/{css,js}/*.{css,js,map}",
    "js/*.js",
    "scss/**/*.scss"
  ]
}
