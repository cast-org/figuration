{
  "name": "figuration",
  "description": "A feature rich, responsive, mobile first, accessible, front-end framework.",
  "version": "4.0.0-beta.3",
  "versionShort": "4.0",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "accessible",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "http://figuration.org",
  "author": "CAST, Inc.",
  "scripts": {
    "test": "grunt test",
    "css-lint-vars": "npm-run-all --continue-on-error --parallel css-lint-vars-*",
    "css-lint-vars-core": "fusv scss/",
    "css-lint-vars-docs": "cross-env-shell \"fusv site/assets/$npm_package_versionShort/scss/\"",
    "docs-build": "npm run docs-serve-clean && npm run docs-serve-copy && eleventy --quiet",
    "docs-serve": "npm-run-all --parallel docs-serve-*",
    "docs-serve-copy": "cross-env-shell \"shx rm -rf site/assets/$npm_package_versionShort/dist/ && shx cp -r dist/ site/assets/$npm_package_versionShort/\"",
    "docs-serve-clean": "rimraf _siteout",
    "docs-serve-11ty": "eleventy --serve --port=9001",
    "docs-prod": "npm run docs-serve-clean && cross-env ELEVENTY_ENV=production eleventy",
    "docs-prod-serve": "npm run docs-serve-clean && cross-env ELEVENTY_ENV=production eleventy --serve",
    "linkinator": "linkinator _siteout --recurse --silent --skip \"^(?!http://localhost)\"",
    "js-test-karma": "karma start build/karma.conf.js",
    "js-test-debug": "cross-env DEBUG=true npm run js-test-karma",
    "js-test-cloud": "cross-env BROWSER=true npm run js-test-karma"
  },
  "style": "dist/css/figuration.css",
  "sass": "scss/figuration.scss",
  "main": "dist/js/figuration.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cast-org/figuration.git"
  },
  "bugs": {
    "url": "https://github.com/cast-org/figuration/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "jquery": "1.9.1 - 3",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@lodder/grunt-postcss": "^2.0.2",
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-figuration": "file:./build/eslint-plugin-figuration",
    "find-unused-sass-variables": "^2.0.0",
    "glob": "^7.1.6",
    "grunt": "^1.0.4",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-eslint": "^22.0.0",
    "grunt-html": "^14.0.0",
    "grunt-rtlcss": "^2.0.2",
    "grunt-run": "^0.8.1",
    "grunt-sass": "^3.1.0",
    "grunt-stylelint": "^0.15.0",
    "jquery": "^3.5.0",
    "karma": "^5.0.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-detect-browsers": "^2.3.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-qunit": "^4.0.0",
    "karma-sauce-launcher": "^4.1.4",
    "linkinator": "^2.0.6",
    "load-grunt-tasks": "^5.1.0",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.7",
    "markdown-it-attrs": "^3.0.2",
    "markdown-it-toc-done-right": "^4.0.2",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "postcss-calc": "^7.0.2",
    "postcss-flexbugs-fixes": "^4.2.1",
    "prismjs": "^1.20.0",
    "qunit": "^2.9.2",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "slugify": "^1.4.0",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.1",
    "time-grunt": "^2.0.0"
  },
  "files": [
    "dist/{css,js}/*.{css,js,map}",
    "js/*.js",
    "scss/**/*.scss"
  ]
}
